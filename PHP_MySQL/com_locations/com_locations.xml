<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0">
	<name>Locations</name>

	<creationDate>2011-05-27</creationDate>
	<author>Samuel Lawson</author>
	<authorEmail>samuel@fatatom.com</authorEmail>
	<authorUrl>http://www.fatatominternetmarketing.com</authorUrl>
	<copyright>2011 Fat Atom Internet Marketing</copyright>
	<license></license>

	<version></version>
	<!-- The description is optional and defaults to the name -->
	<description>Dr. Tavel Locations manager for Joomla!</description>

	<!-- Site Main File Copy Section -->
	<files folder="site">
		<filename>controller.php</filename>
		<filename>locations.php</filename>
		<filename>index.html</filename>
		<filename>models/location.php</filename>
		<filename>views/location/index.html</filename>
		<filename>views/location/view.html.php</filename>
		<filename>views/location/tmpl/index.html</filename>
		<filename>views/location/tmpl/default.php</filename>
		<filename>models/locations.php</filename>
		<filename>views/locations/index.html</filename>
		<filename>views/locations/view.html.php</filename>
		<filename>views/locations/tmpl/index.html</filename>
		<filename>views/locations/tmpl/default.php</filename>
		<filename>views/index.html</filename>
	</files>

	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.sql</file>
		</sql>
	</uninstall>	

	<administration>
		<!-- Administration Menu Section -->
		<menu>Dr. Tavel Locations Manager</menu>
		
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Site Main File Copy Section -->
			<filename>locations.php</filename>
			<filename>index.html</filename>
			<filename>install.sql</filename>
			<filename>uninstall.sql</filename>
			<filename>controller.php</filename>
			<filename>controllers/location.php</filename>
			<filename>controllers/index.html</filename>
			<filename>models/locations.php</filename>
			<filename>models/location.php</filename>
			<filename>models/index.html</filename>
			<filename>tables/location.php</filename>
			<filename>tables/index.html</filename>
			<filename>views/location/view.html.php</filename>
			<filename>views/location/tmpl/form.php</filename>
			<filename>views/location/index.html</filename>
			<filename>views/location/tmpl/index.html</filename>
			<filename>views/locations/view.html.php</filename>
			<filename>views/locations/index.html</filename>
			<filename>views/locations/tmpl/default.php</filename>
			<filename>views/locations/tmpl/index.html</filename>
		</files>		
	</administration>
</install>
